package br.com.redhat.leilaoweb.aplicacao;

import org.jboss.seam.annotations.In;
import org.jboss.seam.annotations.Name;
import org.jboss.seam.annotations.Out;
import org.jboss.seam.international.StatusMessages;
import org.jboss.seam.international.StatusMessage.Severity;

import br.com.redhat.leilaoweb.dominio.entidade.Item;
import br.com.redhat.leilaoweb.dominio.repositorio.RepositorioItem;

@Name("itemManager")
public class ItemManager {

	@In
	@Out
	private Item item;

	@In
	private RepositorioItem repositorioItem;

	@In
	private StatusMessages statusMessages;

	public void salvar() {
		repositorioItem.armazenar(item);
		statusMessages.add(Severity.INFO, "Item #{item.nome} salvo com sucesso!");
	}

	public void atualizar() {
		repositorioItem.armazenar(item);
		statusMessages.add(Severity.INFO, "Item #{item.nome} salvo com sucesso!");
	}

	public void remover() {
		repositorioItem.remover(item);
		statusMessages.add(Severity.INFO, "Item #{item.nome} salvo com sucesso!");
	}

	public void novo() {
		item = null;
	}
}
